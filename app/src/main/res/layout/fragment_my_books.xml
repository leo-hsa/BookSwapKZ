<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- AppBar с Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мои книги"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Вкладки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/purple">

            <!-- Вкладка "Доступные" -->
            <LinearLayout
                android:id="@+id/tabAvailable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tabAvailableIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_book_open"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tabAvailableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доступные"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/tabAvailableIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/white" />

            </LinearLayout>

            <!-- Вкладка "Обмененные" -->
            <LinearLayout
                android:id="@+id/tabExchanged"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tabExchangedIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_swap"
                    app:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tabExchangedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обмененные"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/tabExchangedIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/purple"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- Вкладка "В аренде" -->
            <LinearLayout
                android:id="@+id/tabRented"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tabRentedIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_rent"
                    app:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tabRentedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="В аренде"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/tabRentedIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/purple"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager2 для переключения между разделами -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Содержимое для первой вкладки "Доступные" -->
    <FrameLayout
        android:id="@+id/availableBooksContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/availableBooksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />

        <TextView
            android:id="@+id/emptyAvailableBooksTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="32dp"
            android:text="У вас пока нет книг"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Содержимое для второй вкладки "Обмененные" -->
    <FrameLayout
        android:id="@+id/exchangedBooksContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exchangedBooksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />

        <TextView
            android:id="@+id/emptyExchangedBooksTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="32dp"
            android:text="У вас нет обмененных книг"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Содержимое для третьей вкладки "В аренде" -->
    <FrameLayout
        android:id="@+id/rentedBooksContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rentedBooksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />

        <TextView
            android:id="@+id/emptyRentedBooksTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="32dp"
            android:text="У вас нет книг в аренде"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </FrameLayout>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Кнопка для добавления книги (как на скриншоте) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBookFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_book"
        app:backgroundTint="@color/teal"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>