<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="60dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_dark"

    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp"
    app:layout_constrainedWidth="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1">

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
    android:textSize="16sp"
    tools:text="Это исходящее сообщение." />
</androidx.cardview.widget.CardView>

<TextView
android:id="@+id/text_message_time"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="10sp"
tools:text="10:01"
android:textColor="@color/teal_dark"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="2dp"
    app:layout_constraintEnd_toEndOf="@+id/card_message_body"
    app:layout_constraintTop_toBottomOf="@+id/card_message_body"/>

    </androidx.constraintlayout.widget.ConstraintLayout>