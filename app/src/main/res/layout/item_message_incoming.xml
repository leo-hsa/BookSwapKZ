<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="60dp">

    <ImageView
        android:id="@+id/image_message_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/placeholder_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/card_message_body"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/teal_light"
    android:layout_marginStart="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/image_message_profile"
    tools:text="John Doe"
    android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_light"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp"
    android:layout_marginStart="8dp"
    app:layout_constrainedWidth="true"
    app:layout_constraintTop_toBottomOf="@+id/text_message_name"
    app:layout_constraintStart_toEndOf="@id/image_message_profile"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
    android:textSize="16sp"
    tools:text="Это входящее сообщение, которое может быть достаточно длинным и переноситься на несколько строк." />
</androidx.cardview.widget.CardView>

<TextView
android:id="@+id/text_message_time"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="10sp"
tools:text="10:00"
android:textColor="@color/teal_light"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"
    app:layout_constraintStart_toStartOf="@+id/card_message_body"
    app:layout_constraintTop_toBottomOf="@+id/card_message_body"/>

    </androidx.constraintlayout.widget.ConstraintLayout>