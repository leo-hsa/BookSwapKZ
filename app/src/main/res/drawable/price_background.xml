<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона (можно использовать цвет из colors.xml) -->
    <solid android:color="#4CAF50"/> <!-- Пример: зеленый -->

    <!-- Закругление углов (настройте радиус) -->
    <corners android:radius="4dp"/>

    <!-- Отступы внутри фона (опционально) -->
    <padding
        android:left="6dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="2dp"/>

</shape>